<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/experienceSpinner"
        android:layout_width="352dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="36dp"
        android:contentDescription="@string/enteranswer"
        android:entries="@array/experience_array"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expertiseSpinner" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="80dp"
        android:layout_height="18dp"
        android:layout_marginStart="4dp"
        android:text="Experience"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/themeSpinner"
        app:layout_constraintTop_toBottomOf="@+id/expertiseSpinner"
        app:layout_constraintVertical_bias="0.054" />

    <Spinner
        android:id="@+id/expertiseSpinner"
        android:layout_width="352dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/enteranswer"
        android:entries="@array/expertise_array"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/themeSpinner" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="80dp"
        android:layout_height="18dp"
        android:layout_marginStart="4dp"
        android:text="@string/expertise"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/themeSpinner"
        app:layout_constraintTop_toBottomOf="@+id/themeSpinner"
        app:layout_constraintVertical_bias="0.054" />

    <Spinner
        android:id="@+id/themeSpinner"
        android:layout_width="352dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="44dp"
        android:contentDescription="@string/enteranswer"
        android:dropDownWidth="match_parent"
        android:entries="@array/theme_array"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="313dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:text="Impactio uses an automated matchmaking system to recommend challenges to you based on your expertise"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="301dp"
        android:layout_height="112dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="48dp"
        android:text="Thank you for signing up - welcome to the Impactio community!"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Please enter your current experience"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/theme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/themeSpinner"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.036" />

    <Button
        android:id="@+id/enterButton"
        android:layout_width="327dp"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:text="Enter"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/experienceSpinner" />

</androidx.constraintlayout.widget.ConstraintLayout>