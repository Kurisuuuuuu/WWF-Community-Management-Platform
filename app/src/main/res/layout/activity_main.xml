<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/iBtnAllChallenges"
        android:layout_width="351dp"
        android:layout_height="197dp"
        android:layout_marginTop="-8dp"
        android:background="#0000"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.256"
        app:srcCompat="@drawable/all_challenges"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/iBtnForYou"
        android:layout_width="351dp"
        android:layout_height="197dp"
        android:layout_marginStart="-25dp"
        android:background="#00000000"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="@+id/iBtnAllChallenges"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.815"
        app:srcCompat="@drawable/for_you"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:text="Challenges for you"
        android:textColor="#7EB143"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.004"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All challenges"
        android:textColor="#7EB143"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="62dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="371dp"
        android:layout_height="51dp"
        android:text="View all challenges currently available for you to apply!"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="371dp"
        android:layout_height="51dp"
        android:layout_marginTop="5dp"
        android:text="Challenges curated just for you using our automated matchmaking feature - based on what you love!"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <ImageView
        android:id="@+id/ivBar"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iBtnForYou"
        app:srcCompat="@drawable/bar" />

    <ImageButton
        android:id="@+id/foryoupagebutton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="55dp"
        android:adjustViewBounds="true"
        android:background="#0000"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/iBtnHome"
        app:layout_constraintTop_toTopOf="@+id/iBtnHome"
        app:srcCompat="@drawable/foryou_icon" />

    <ImageButton
        android:id="@+id/profilepagebutton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="55dp"
        android:adjustViewBounds="true"
        android:background="#0000"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@+id/iBtnHome"
        app:layout_constraintTop_toTopOf="@+id/iBtnHome"
        app:srcCompat="@drawable/profile_icon" />

    <ImageButton
        android:id="@+id/iBtnHome"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:adjustViewBounds="true"
        android:background="#0000"
        android:scaleType="centerCrop"
        android:tint="#006D27"
        app:layout_constraintEnd_toEndOf="@+id/ivBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivBar"
        app:srcCompat="@drawable/homeicon" />

</androidx.constraintlayout.widget.ConstraintLayout>