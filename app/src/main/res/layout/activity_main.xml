<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintBottom_toTopOf="@+id/ivBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abel"
                android:paddingLeft="5dp"
                android:text="All challenges"
                android:textColor="#7EB143"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="374dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/abel"
                android:paddingLeft="5dp"
                android:text="View all challenges currently available for you to apply!"
                android:textSize="17dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/iBtnAllChallenges"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:background="#0000"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/all_challenges"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/abel"
                android:paddingLeft="5dp"
                android:text="Challenges for you"
                android:textColor="#7EB143"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="369dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/abel"
                android:paddingLeft="5dp"
                android:text="Challenges curated just for you using our automated matchmaking feature - based on what you love!"
                android:textSize="17dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/iBtnForYou"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:background="#00000000"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/for_you"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/ivBar"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bar" />

    <ImageButton
        android:id="@+id/foryoupagebutton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="55dp"
        android:adjustViewBounds="true"
        android:background="#0000"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/iBtnHome"
        app:layout_constraintTop_toTopOf="@+id/iBtnHome"
        app:srcCompat="@drawable/foryou_icon" />

    <ImageButton
        android:id="@+id/profilepagebutton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="55dp"
        android:adjustViewBounds="true"
        android:background="#0000"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@+id/iBtnHome"
        app:layout_constraintTop_toTopOf="@+id/iBtnHome"
        app:srcCompat="@drawable/profile_icon" />

    <ImageButton
        android:id="@+id/iBtnHome"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="18dp"
        android:adjustViewBounds="true"
        android:background="#0000"
        android:scaleType="centerCrop"
        android:tint="#006D27"
        app:layout_constraintEnd_toEndOf="@+id/ivBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivBar"
        app:srcCompat="@drawable/homeicon" />

</androidx.constraintlayout.widget.ConstraintLayout>